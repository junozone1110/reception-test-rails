<div class="max-w-7xl mx-auto">
  <div class="mb-8 text-center">
    <h1 class="text-4xl font-bold text-gray-900 mb-2">訪問者受付システム</h1>
    <p class="text-gray-600">訪問したい従業員を選択してください</p>
  </div>

  <!-- 検索とフィルター -->
  <div class="bg-white rounded-lg shadow-md p-6 mb-6">
    <%= form_with url: employees_path, method: :get, class: "space-y-4", data: { turbo_frame: "employees" } do |f| %>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <!-- 検索 -->
        <div>
          <%= f.label :q, "従業員名で検索", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.text_field :q, 
              value: params[:q],
              placeholder: "名前を入力...", 
              class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
        </div>

        <!-- 部署フィルター -->
        <div>
          <%= f.label :department_id, "部署で絞り込み", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.select :department_id, 
              options_for_select([["すべて", nil]] + @departments.map { |d| [d.name, d.id] }, params[:department_id]),
              {},
              class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
        </div>
      </div>

      <div class="flex justify-end">
        <%= f.submit "検索", class: "px-6 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors" %>
        <%= link_to "クリア", employees_path, class: "ml-2 px-6 py-2 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 transition-colors" %>
      </div>
    <% end %>
  </div>

  <!-- 従業員一覧 -->
  <%= turbo_frame_tag "employees" do %>
    <% if @employees.any? %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
        <% @employees.each do |employee| %>
          <%= link_to new_visit_path(employee_id: employee.id), 
              data: { turbo_frame: "_top" },
              class: "bg-white rounded-lg shadow-md hover:shadow-xl transition-shadow overflow-hidden group" do %>
            <div class="p-6">
              <div class="flex flex-col items-center">
                <div class="w-24 h-24 rounded-full bg-gradient-to-br from-blue-400 to-purple-500 flex items-center justify-center text-white text-2xl font-bold mb-4 group-hover:scale-110 transition-transform">
                  <%= employee.name[0] %>
                </div>
                <h3 class="text-lg font-semibold text-gray-900 mb-1"><%= employee.name %></h3>
                <p class="text-sm text-gray-600"><%= employee.department.name %></p>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    <% else %>
      <div class="bg-white rounded-lg shadow-md p-12 text-center">
        <p class="text-gray-500 text-lg">該当する従業員が見つかりませんでした</p>
      </div>
    <% end %>
  <% end %>
</div>

