<div class="max-w-7xl mx-auto">
  <!-- ヘッダー -->
  <div class="flex justify-between items-center mb-6">
    <div>
      <h1 class="text-3xl font-bold text-gray-900">SmartHR 同期履歴</h1>
      <p class="text-gray-600 mt-1">過去の同期処理の履歴を確認できます</p>
    </div>
    <div class="flex gap-3">
      <%= button_to admin_smarthr_sync_path, 
          { method: :post, data: { turbo_confirm: "SmartHRから従業員情報を同期しますか？" } },
          { class: "px-4 py-3 bg-purple-600 text-white rounded-lg hover:bg-purple-700 transition-colors font-semibold flex items-center gap-2" } do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
        </svg>
        <span>今すぐ同期</span>
      <% end %>
      <%= link_to "従業員管理に戻る", admin_employees_path, class: "px-4 py-3 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 transition-colors font-semibold" %>
    </div>
  </div>

  <!-- 統計情報 -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-6">
    <div class="bg-white rounded-lg shadow-md p-6">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center">
            <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
        </div>
        <div class="ml-4">
          <h3 class="text-sm font-medium text-gray-500">成功</h3>
          <p class="text-2xl font-bold text-gray-900"><%= @success_count %></p>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-lg shadow-md p-6">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <div class="w-12 h-12 bg-red-100 rounded-lg flex items-center justify-center">
            <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
        </div>
        <div class="ml-4">
          <h3 class="text-sm font-medium text-gray-500">失敗</h3>
          <p class="text-2xl font-bold text-gray-900"><%= @failed_count %></p>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-lg shadow-md p-6">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
            <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
        </div>
        <div class="ml-4">
          <h3 class="text-sm font-medium text-gray-500">最終同期</h3>
          <p class="text-lg font-bold text-gray-900">
            <% if @latest_sync %>
              <%= @latest_sync.formatted_synced_at %>
            <% else %>
              未実行
            <% end %>
          </p>
        </div>
      </div>
    </div>
  </div>

  <!-- 同期履歴一覧 -->
  <div class="bg-white rounded-lg shadow-md overflow-hidden">
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-lg font-semibold text-gray-900">同期履歴</h2>
    </div>
    
    <% if @sync_logs.any? %>
      <div class="divide-y divide-gray-200">
        <% @sync_logs.each do |log| %>
          <div class="p-6 hover:bg-gray-50 transition-colors">
            <div class="flex items-start justify-between">
              <div class="flex-1">
                <div class="flex items-center gap-3 mb-2">
                  <% if log.success? %>
                    <span class="px-3 py-1 text-sm font-semibold rounded-full bg-green-100 text-green-800">
                      成功
                    </span>
                  <% else %>
                    <span class="px-3 py-1 text-sm font-semibold rounded-full bg-red-100 text-red-800">
                      失敗
                    </span>
                  <% end %>
                  <span class="text-sm text-gray-500"><%= log.formatted_synced_at %></span>
                </div>

                <% if log.success? && log.details.present? %>
                  <div class="mt-3 grid grid-cols-4 gap-4 text-sm">
                    <div>
                      <span class="text-gray-500">新規作成:</span>
                      <span class="font-semibold text-blue-600"><%= log.details["created"] || 0 %> 件</span>
                    </div>
                    <div>
                      <span class="text-gray-500">更新:</span>
                      <span class="font-semibold text-green-600"><%= log.details["updated"] || 0 %> 件</span>
                    </div>
                    <div>
                      <span class="text-gray-500">無効化:</span>
                      <span class="font-semibold text-orange-600"><%= log.details["deactivated"] || 0 %> 件</span>
                    </div>
                    <div>
                      <span class="text-gray-500">スキップ:</span>
                      <span class="font-semibold text-gray-600"><%= log.details["skipped"] || 0 %> 件</span>
                    </div>
                  </div>

                  <% if log.details["errors"].present? && log.details["errors"].any? %>
                    <div class="mt-3 p-3 bg-yellow-50 border border-yellow-200 rounded">
                      <p class="text-sm font-semibold text-yellow-800 mb-1">警告:</p>
                      <ul class="text-sm text-yellow-700 list-disc list-inside space-y-1">
                        <% log.details["errors"].first(3).each do |error| %>
                          <li><%= error %></li>
                        <% end %>
                        <% if log.details["errors"].size > 3 %>
                          <li class="text-yellow-600">他 <%= log.details["errors"].size - 3 %> 件のエラー</li>
                        <% end %>
                      </ul>
                    </div>
                  <% end %>
                <% elsif log.failed? %>
                  <div class="mt-3 p-3 bg-red-50 border border-red-200 rounded">
                    <p class="text-sm font-semibold text-red-800 mb-1">エラー:</p>
                    <p class="text-sm text-red-700"><%= log.error_message %></p>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="p-12 text-center">
        <div class="w-16 h-16 mx-auto bg-gray-100 rounded-full flex items-center justify-center mb-4">
          <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <p class="text-gray-500 text-lg">同期履歴がありません</p>
        <p class="text-gray-400 text-sm mt-2">「今すぐ同期」ボタンから初回の同期を実行してください</p>
      </div>
    <% end %>
  </div>
</div>

