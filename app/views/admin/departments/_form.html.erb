<%= form_with model: [:admin, department], class: "space-y-6" do |f| %>
  <% if department.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-lg p-4">
      <h3 class="text-red-800 font-semibold mb-2">エラーが発生しました</h3>
      <ul class="list-disc list-inside text-red-700">
        <% department.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :name, "部署名", class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= f.text_field :name, 
        required: true,
        placeholder: "例: 営業部",
        class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
    <p class="mt-1 text-sm text-gray-500">訪問者や従業員に表示される部署名を入力してください</p>
  </div>

  <div>
    <%= f.label :position, "表示順", class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= f.number_field :position, 
        required: true,
        min: 0,
        class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
    <p class="mt-1 text-sm text-gray-500">小さい数字ほど上位に表示されます（0から開始）</p>
  </div>

  <div class="flex gap-4">
    <%= f.submit department.new_record? ? "登録" : "更新", 
        class: "flex-1 px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors font-semibold" %>
    <%= link_to "キャンセル", 
        admin_departments_path, 
        class: "px-6 py-3 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 transition-colors" %>
  </div>
<% end %>

