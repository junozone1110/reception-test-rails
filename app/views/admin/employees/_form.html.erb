<%= form_with model: [:admin, employee], class: "space-y-6" do |f| %>
  <% if employee.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-lg p-4">
      <h3 class="text-red-800 font-semibold mb-2">エラーが発生しました</h3>
      <ul class="list-disc list-inside text-red-700">
        <% employee.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :name, "名前", class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= f.text_field :name, 
        required: true,
        class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
  </div>

  <div>
    <%= f.label :email, "メールアドレス", class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= f.email_field :email, 
        class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
  </div>

  <div>
    <%= f.label :slack_user_id, "Slack User ID", class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= f.text_field :slack_user_id, 
        required: true,
        placeholder: "例: U01234ABCDE",
        class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
    <p class="mt-1 text-sm text-gray-500">Slackの User ID を入力してください</p>
  </div>

  <div>
    <%= f.label :department_id, "部署", class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= f.select :department_id,
        options_for_select(@departments.map { |d| [d.name, d.id] }, employee.department_id),
        { include_blank: "選択してください" },
        required: true,
        class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
  </div>

  <div>
    <%= f.label :avatar_url, "アバターURL（任意）", class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= f.text_field :avatar_url, 
        placeholder: "https://example.com/avatar.png",
        class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
  </div>

  <div class="space-y-3 p-4 bg-gray-50 rounded-lg">
    <div class="flex items-center">
      <%= f.check_box :is_active, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
      <%= f.label :is_active, "有効", class: "ml-2 block text-sm text-gray-900" %>
      <span class="ml-2 text-xs text-gray-500">（無効にすると全ての機能で使用できなくなります）</span>
    </div>
    
    <div class="flex items-center">
      <%= f.check_box :visible_to_visitors, class: "h-4 w-4 text-purple-600 focus:ring-purple-500 border-gray-300 rounded" %>
      <%= f.label :visible_to_visitors, "受付画面に表示", class: "ml-2 block text-sm text-gray-900" %>
      <span class="ml-2 text-xs text-gray-500">（チェックすると訪問者が担当者として選択できます）</span>
    </div>
  </div>

  <div class="flex gap-4">
    <%= f.submit employee.new_record? ? "登録" : "更新", 
        class: "flex-1 px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors font-semibold" %>
    <%= link_to "キャンセル", 
        admin_employees_path, 
        class: "px-6 py-3 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 transition-colors" %>
  </div>
<% end %>

