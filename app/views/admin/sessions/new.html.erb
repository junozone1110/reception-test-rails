<div class="min-h-screen flex items-center justify-center">
  <div class="max-w-md w-full">
    <div class="bg-white rounded-lg shadow-md p-8">
      <h1 class="text-3xl font-bold text-gray-900 mb-6 text-center">管理画面ログイン</h1>

      <%= form_with url: admin_login_path, class: "space-y-6" do |f| %>
        <div>
          <%= label_tag :email, "メールアドレス", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= email_field_tag :email, 
              params[:email],
              required: true,
              autofocus: true,
              class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
        </div>

        <div>
          <%= label_tag :password, "パスワード", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= password_field_tag :password, 
              nil,
              required: true,
              class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
        </div>

        <%= submit_tag "ログイン", 
            class: "w-full px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors font-semibold" %>
      <% end %>

      <div class="mt-6 text-center">
        <%= link_to "← 訪問者画面に戻る", root_path, class: "text-blue-600 hover:text-blue-800" %>
      </div>
    </div>
  </div>
</div>

